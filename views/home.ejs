            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        } 
         .topnav a.active {
            background-color: black;
            color: silver;
        } 
        nav {
            display: flex;
            justify-content: space-around;
            background-color: black;
            color: silver;
        }
        nav .right, nav .left {
            display: flex;
        }
        .left img {
            margin-top: -11px;
            width: 100%;
        }
        .left p {
            margin-inline: 22px;
            margin-top: 21px;
        }
        .right a, .right i, .right button {
            margin-inline: 22px;
            margin-top: 21px;
        }
         .right button {
            width: 100px;
            height: 36px;
            background-color:silver;
            color: black;
            font-weight: 600;
            border: none;
            border-radius: 22px;
        } 
        .right button:hover {
            background-color: transparent;
            color: silver;
            border: 2px solid silver;
        }
        .card {
            background-image: url(https://www.uber-assets.com/image/upload/f_auto,q_auto:eco,c_fill,w_1098,h_618/v1613521717/assets/7a/fd8982-6884-49b9-bb5f-28e6ff2cc0e8/original/Rider_Home_bg_tablet.png);
            background-repeat: no-repeat;
            background-size: cover;
            height: 600px;
            padding: 3%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .main {
            background-color: silver;
            position: relative;
            border-radius: 10px;
            background-color: silver;
            padding: 20px 0 30px 0;
            top: 15%;
            width: 30%;
            margin: 50px;
            margin-top: 1px;
            text-align: center;
        }
        .container {
            padding: 20px;
        }
        .form-container {
            display: none;
        }
        .form-container.active {
            display: block;
        }
        .navigation {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .navigation i {
            margin: 0 10px;
            font-size: 24px;
            cursor: pointer;
            color: black;
        }
        .navigation i:hover {
            color:black;
        }
        .fr {
            margin: 5px;
            padding: 10px 20px;
            background-color:black;
            color: silver;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .fr:hover {
            background-color:black;
        }
        .card h1 {
            font-size: 33px;
            text-align: center;
        }
        .card input {
            width: 330px;
            height: 30px;
            background-color:silver(235, 232, 232);
            padding: 8px;
            margin-top: 4px;
            border: none;
            margin-left: 33px;
        }
        .card .btn {
            margin-left: 33px;
            margin-top: 44px;
        }
        .card .btn .fr, .card .btn button {
            width: 140px;
            height: 36px;
            background-color: black;
            color: silver;
            border: none;
            border-radius: 4px;
            margin-inline: 10px;
        }
        .card .btn button {
            background-color:silver(190, 188, 188);
        }
        .ride .uber {
            display: flex;
            justify-content: space-around;
        }
        .uber .auto {
            display: flex;
            margin-top: 33px;
        }
        .uber .auto img {
            margin-inline: 33px;
            width: 43px;
        }
    </style>
</head>
<body>
    <nav>
        <div class="left"> 
            <img src="https://www.uber-assets.com/image/upload/f_auto,q_auto:eco,c_fill,w_84,h_84/v1618459257/assets/13/6bfdbd-cdb6-4221-92c1-cab1feaa39f3/original/Rider-App-logo.png">
        </div>
        
        <div class="topnav" >
            <a href="#">EN</a>
            <a href="/products">Products</a>
            <a href="/login">Login</a>
            <a href="/signuppage">Sign-up</a>
        </div>
    </nav>
    <div class="card">
        <div class="main">
