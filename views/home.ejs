            <div class="container form-container active" id="form1">
                <h1>Request a ride now</h1><br>
                <input type="text" placeholder="Enter the pickup location"><br><br>
                <input type="text" placeholder="Enter Destination">
                <div class="btn"><a href="riderlocation">
                    <button class="fr" type="submit">Request Now</button></a>
                    <a href="riderlocation"> <button class="fr" type="submit">See Prices</button></a>
                </div>
            </div>
            <div class="container form-container" id="form2">
                <h1>Drive when you want...</h1><br>
                <input type="text" placeholder="Enter the current location"><br><br>
                <div class="btn">
                    <a href="driverlocation"><button class="fr" type="submit">Get Started</button></a>
                   <a href="driverlogin"> <button class="fr" type="submit">Login</button></a>
                </div>
            </div>
        </div>
    </div>


